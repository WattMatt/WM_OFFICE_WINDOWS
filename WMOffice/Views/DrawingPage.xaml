<Page x:Class="WMOffice.Views.DrawingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WMOffice.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Drawing Register">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Drawing Register" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Add Drawing" Margin="20,0,0,0" Padding="10,5"/>
            <Button Content="Open Markup" Margin="10,0,0,0" Padding="10,5"/>
        </StackPanel>

        <DataGrid Grid.Row="1" x:Name="DrawingDataGrid" AutoGenerateColumns="False" Margin="10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Number" Binding="{Binding DrawingNumber}" Width="100"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Rev" Binding="{Binding Revision}" Width="50"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Image Path" Binding="{Binding ImagePath}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
