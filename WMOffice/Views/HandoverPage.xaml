<Page
    x:Class="WMOffice.Views.HandoverPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WMOffice.ViewModels"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Project Handover Checklist" 
                   Style="{StaticResource TitleTextBlockStyle}" 
                   Margin="20,20,20,10"/>

        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Items}" Margin="20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox IsChecked="{Binding IsRequired}" IsEnabled="False" Margin="0,0,10,0"/>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding DocumentName}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Link}" Foreground="Blue" TextDecorations="Underline" Visibility="{Binding Link, Converter={StaticResource StringToVisibilityConverter}}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" Text="{Binding Status}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
