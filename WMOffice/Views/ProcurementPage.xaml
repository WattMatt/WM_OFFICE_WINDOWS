<Page x:Class="WMOffice.Views.ProcurementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WMOffice.Views"
      xmlns:vm="clr-namespace:WMOffice.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Procurement">

    <Page.DataContext>
        <vm:ProcurementViewModel/>
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="200" VerticalAlignment="Center" Margin="0,0,20,0"/>
            
            <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox SelectedItem="{Binding SelectedStatusFilter}" Width="150" VerticalAlignment="Center">
                <ComboBox.Items>
                    <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">All</System:String>
                    <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Pending</System:String>
                    <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Ordered</System:String>
                    <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Delivered</System:String>
                </ComboBox.Items>
            </ComboBox>
        </StackPanel>

        <!-- Data Grid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredItems}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="*"/>
                <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier}" Width="150"/>
                <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Delivery Date" Binding="{Binding DeliveryDate, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
