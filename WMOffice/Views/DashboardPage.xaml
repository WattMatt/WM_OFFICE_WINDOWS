<Page x:Class="WMOffice.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WMOffice.Views"
      xmlns:vm="clr-namespace:WMOffice.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Page.DataContext>
        <vm:DashboardViewModel/>
    </Page.DataContext>

    <Grid Background="#F3F3F3">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="{Binding WelcomeMessage}" 
                   FontSize="24" FontWeight="Bold" Margin="20,20,0,10"
                   Foreground="#333"/>

        <!-- Key Metrics Cards -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding KeyMetrics}" Margin="10,0,10,20">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" CornerRadius="8" Margin="10" Padding="15" Width="220" Height="100">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Icon -->
                            <Border Width="50" Height="50" CornerRadius="25" Background="{Binding Color}" Opacity="0.15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" FontSize="24" Foreground="{Binding Color}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <!-- Text -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0,0,0">
                                <TextBlock Text="{Binding Value}" FontSize="20" FontWeight="Bold" Foreground="#333"/>
                                <TextBlock Text="{Binding Title}" FontSize="12" Foreground="#888"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Budget Overview (Charts) -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Budget Overview" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>
                    
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding BudgetOverview}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,15">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Margin="0,0,0,5">
                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium" Foreground="#555"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding Spent, StringFormat='${0:N0}'}" FontWeight="Bold" Foreground="#333"/>
                                            <TextBlock Text=" / " Foreground="#999"/>
                                            <TextBlock Text="{Binding Total, StringFormat='${0:N0}'}" Foreground="#999"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <Grid Grid.Row="1" Height="20">
                                        <ProgressBar Value="{Binding Percentage}" Maximum="100" Height="10" 
                                                     Background="#EEE" BorderThickness="0" Foreground="{Binding BarColor}"
                                                     VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding DisplayPercentage}" FontSize="10" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,2,0,0"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Recent Projects -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Margin="10,0,0,0" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Recent Projects" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <ListView Grid.Row="1" ItemsSource="{Binding ActiveProjects}" BorderThickness="0" Background="Transparent">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Width="40" Height="40" CornerRadius="20" Background="#F0F0F0" Margin="0,0,10,0">
                                        <TextBlock Text="&#xE82D;" FontFamily="Segoe MDL2 Assets" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#666"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontWeight="Medium" Foreground="#333"/>
                                        <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#888"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
