<Page
    x:Name="MyPage"
    x:Class="WMOffice.Views.ProjectListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WMOffice.Views"
    xmlns:vm="using:WMOffice.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Padding="12" Spacing="12">
            <TextBlock Text="Projects" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            <TextBox PlaceholderText="New Project Name" Text="{x:Bind ViewModel.NewProjectName, Mode=TwoWay}" Width="200" VerticalAlignment="Center"/>
            <Button Content="Add Project" Command="{x:Bind ViewModel.AddProjectCommand}" VerticalAlignment="Center"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{x:Bind ViewModel.Projects}" Padding="12">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="vm:Project">
                    <Grid Padding="12" CornerRadius="8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{x:Bind Name}" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Text="{x:Bind Status}" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                        <Button Grid.Column="1" Content="Delete" Command="{Binding ElementName=MyPage, Path=DataContext.DeleteProjectCommand}" CommandParameter="{Binding}" VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <ProgressRing IsActive="{x:Bind ViewModel.IsLoading}" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
