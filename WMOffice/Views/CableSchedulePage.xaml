<Page
    x:Class="WMOffice.Views.CableSchedulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WMOffice.ViewModels"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:CableScheduleViewModel />
    </Page.DataContext>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Padding="12" Spacing="8">
            <TextBlock Text="Cable Schedule" Style="{StaticResource TitleTextBlockStyle}" VerticalAlignment="Center"/>
            <CommandBar DefaultLabelPosition="Right" Background="Transparent">
                <AppBarButton Icon="Add" Label="Add Run" Command="{Binding AddRunCommand}"/>
                <AppBarButton Icon="Remove" Label="Remove Run" Command="{Binding RemoveRunCommand}"/>
                <AppBarButton Icon="Calculator" Label="Calculate All" Command="{Binding CalculateCommand}"/>
            </CommandBar>
        </StackPanel>

        <!-- Header Row -->
        <Grid Grid.Row="1" Padding="12,0,12,0" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Tag" FontWeight="Bold" Margin="4"/>
            <TextBlock Grid.Column="1" Text="From" FontWeight="Bold" Margin="4"/>
            <TextBlock Grid.Column="2" Text="To" FontWeight="Bold" Margin="4"/>
            <TextBlock Grid.Column="3" Text="Load (A)" FontWeight="Bold" Margin="4"/>
            <TextBlock Grid.Column="4" Text="Len (m)" FontWeight="Bold" Margin="4"/>
            <TextBlock Grid.Column="5" Text="Cable Size" FontWeight="Bold" Margin="4"/>
        </Grid>

        <!-- Data List -->
        <ListView Grid.Row="2" ItemsSource="{Binding CableRuns}" SelectedItem="{Binding SelectedRun, Mode=TwoWay}" Padding="12">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- Editable fields via TextBox binding TwoWay -->
                        <TextBox Grid.Column="0" Text="{Binding Tag, Mode=TwoWay}" Margin="2"/>
                        <TextBox Grid.Column="1" Text="{Binding From, Mode=TwoWay}" Margin="2"/>
                        <TextBox Grid.Column="2" Text="{Binding To, Mode=TwoWay}" Margin="2"/>
                        <TextBox Grid.Column="3" Text="{Binding Load, Mode=TwoWay}" Margin="2"/>
                        <TextBox Grid.Column="4" Text="{Binding Length, Mode=TwoWay}" Margin="2"/>
                        <!-- Result is ReadOnly usually, but binding helps update -->
                        <TextBlock Grid.Column="5" Text="{Binding CableSize}" VerticalAlignment="Center" Margin="4"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
