<Page x:Class="WMOffice.Views.StaffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:WMOffice.Views"
      xmlns:vm="clr-namespace:WMOffice.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Staff Management">

    <Page.DataContext>
        <vm:StaffViewModel/>
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <!-- Staff List -->
        <DockPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="Staff Directory" FontSize="24" FontWeight="Bold" DockPanel.Dock="Top" Margin="0,0,0,10"/>
            
            <ListView ItemsSource="{Binding StaffList}" SelectedItem="{Binding SelectedStaffMember}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Role" DisplayMemberBinding="{Binding Role}" Width="100"/>
                        <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="150"/>
                        <GridViewColumn Header="Phone" DisplayMemberBinding="{Binding Phone}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <!-- Edit/Add Form -->
        <StackPanel Grid.Column="1" Background="#F5F5F5" Margin="10" p="10">
            <TextBlock Text="Staff Details" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

            <Label Content="Name"/>
            <TextBox Text="{Binding CurrentStaffMember.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <Label Content="Role"/>
            <TextBox Text="{Binding CurrentStaffMember.Role, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <Label Content="Email"/>
            <TextBox Text="{Binding CurrentStaffMember.Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>

            <Label Content="Phone"/>
            <TextBox Text="{Binding CurrentStaffMember.Phone, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="New" Command="{Binding NewCommand}" Width="70" Margin="0,0,10,0"/>
                <Button Content="Save" Command="{Binding SaveCommand}" Width="70" Margin="0,0,10,0"/>
                <Button Content="Delete" Command="{Binding DeleteCommand}" Width="70"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
